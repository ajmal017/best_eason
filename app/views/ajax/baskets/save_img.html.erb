<script type="text/javascript">
<% if @basket.temp_image.errors[:image].present? %>
  window.parent.$("#FloatWindow").find("#FloatWindow .textbody").html("<center><%= @basket.temp_image.errors[:image].first %></center>");
<% else %>
  window.parent.$("#CaishuoDialog .footer input").show();
  window.parent.$("#CaishuoDialog").find(".textbody").html("<img src='<%=@basket.temp_image.image.url(:normal)%>' id='cropbox'></img>");
  
  window.parent.BasketJcropInit();
<% end %>
</script>
