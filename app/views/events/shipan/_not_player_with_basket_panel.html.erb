<!-- 非参赛用户，有组合 -->
<div class="itemBox userPanel">
    <div class="userInfo">
        <a class="avator avator_70">
          <%= image_tag current_user.avatar_url(:large) %>
          <span><%= current_user.username %>
              <em><%= current_user.headline %></em>
          </span>
        </a>
    </div>
    <dl class="basketInfo clearfix">
        <dt>
            <span>大赛平均收益</span>
            <strong><%= up_down_style(@contest.avg_ret, {postfix: "%", force_precision: 2}) %></strong>
        </dt>
        <dd>
            <label>敬请期待下次大赛来临！</label>
            <% if @contest.signed_next?(current_user.id) %>
              <div class="assigned btn-blue" style="display:block;">下次大赛已登记</div>
            <% else %>
              <div class="assigned btn-blue">下次大赛已登记</div>
              <button type="button" class="btn btn-blue" id="registerMatch">我要报名下一次 !</button>
            <% end %>
        </dd>
    </dl>
</div>