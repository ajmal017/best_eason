<div id="navCanFloat" class="holding-top content">
  <div class="selectbox">
    <input type="hidden" value="<%= @search.account %>">
    <label class="invest"><%= @search.account_desc.html_safe %></label><kbd></kbd>
    <ul class="dropdown" id="account">
      <% @search.accounts.each do |pretty_id, account_desc| %>
        <li data-value="<%= pretty_id %>"><%= account_desc.html_safe %></li>
      <% end %>
    </ul>
  </div>

  <% if @search.show_refresh? %>
    <a href="javascript:;" onclick="javascript:refreshOrders(this);" class="refresh"></a>
  <% end %>
  <div class="tl_searchgroup">
      <input type="text" class="search j_filter_search_word" placeholder="搜索股票代码、订单编号" size="30" value="<%= @search.query_word %>"><kbd id="search"></kbd>
      <div class="screening-conditions"></div>
  </div>
</div>
