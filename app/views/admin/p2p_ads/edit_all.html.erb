<h1 class="title">
 <span class="title_left"><%=@page_title%></span>
 <span class="title_right">
  <a href="/admin/p2p_ads">返回</a>
  </span>
</h1>
<%= form_tag "/admin/p2p_ads/update_all", method: "PUT" do %>
  <table class="grid">
    <thead>
      <tr>
        <th>id</th>
        <th>标题</th>
        <th>链接</th>
      </tr>
    </thead>
    <tbody>
      <% @p2p_ads.each_with_index do |p, i| %>
        <tr>
          <td><%= i+1 %><%= hidden_field_tag "p2p_ads[][id]", i+1 %></td>
          <td>
            <%= text_field_tag "p2p_ads[][title]", p.title %>
          </td>
          <td>
            <%= text_field_tag "p2p_ads[][url]", p.url %>
          </td>
        </tr>
      <% end %>
      <tr>
        <td colspan="3"><%= submit_tag "确定" %><br/></td>
      <tr>
    </tbody>
  </table>
<% end -%>
