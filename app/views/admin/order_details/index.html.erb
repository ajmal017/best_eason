<h1 class="title">
  <span class="title_left">Order detail列表页</span>
  <span class="title_right">
  </span>   
</h1>

<%= notice_tag -%>

<div class="box">
  <%= search_form_for @q, url: admin_order_details_path, class: 'form-inline', role: 'form' do |f| -%>
    <%= f.text_field :user_id_eq, :placeholder => 'UserId', class: 'form-control' %>
    <%= f.text_field :trading_account_id_eq, :placeholder => 'TradingAccountId', class: 'form-control' %>
    <%= f.submit '搜索', :class => 'btn btn-primary', :style => 'width:5%;' %>
  <% end -%>
</div>

<div class="page_info">
  总数： <b><%= @order_details.total_entries %></b>
</div>

<table class="grid">
  <thead>
    <tr>
      <th>Id</th>
      <th>Order</th>
      <th>Instance</th>
      <th>Base stock</th>
      <th>User</th>
      <th>Basket</th>
      <th>Est shares</th>
      <th>Real shares</th>
      <th>Est cost</th>
      <th>Real cost</th>
      <th>Status</th>
      <th>Symbol</th>
      <th>Ib order</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Trade type</th>
      <th>Trade time</th>
      <th>Order type</th>
      <th>Limit price</th>
      <th>Updated by</th>
      <th>Commission</th>
      <th>Background</th>
      <th>Average cost</th>
      <th>Market</th>
      <th>Currency</th>
      <th>Cash</th>
      <th>Trading account</th>
      <th>Rt order</th>
      <th>Result</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>
  <tbody>
  
  <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.id %></td>
      <td><%= order_detail.order_id %></td>
      <td><%= order_detail.instance_id %></td>
      <td><%= order_detail.base_stock_id %></td>
      <td><%= order_detail.user_id %></td>
      <td><%= order_detail.basket_id %></td>
      <td><%= order_detail.est_shares %></td>
      <td><%= order_detail.real_shares %></td>
      <td><%= order_detail.est_cost %></td>
      <td><%= order_detail.real_cost %></td>
      <td><%= order_detail.status %></td>
      <td><%= order_detail.symbol %></td>
      <td><%= order_detail.ib_order_id %></td>
      <td><%= order_detail.created_at %></td>
      <td><%= order_detail.updated_at %></td>
      <td><%= order_detail.trade_type %></td>
      <td><%= order_detail.trade_time %></td>
      <td><%= order_detail.order_type %></td>
      <td><%= order_detail.limit_price %></td>
      <td><%= order_detail.updated_by %></td>
      <td><%= order_detail.commission %></td>
      <td><%= order_detail.background %></td>
      <td><%= order_detail.average_cost %></td>
      <td><%= order_detail.market %></td>
      <td><%= order_detail.currency %></td>
      <td><%= order_detail.cash_id %></td>
      <td><%= order_detail.trading_account_id %></td>
      <td><%= order_detail.rt_order_id %></td>
      <td><%= order_detail.result %></td>
    </tr>
  <% end %>
 
  </tbody>
</table>

<%= will_paginate @order_details %>
