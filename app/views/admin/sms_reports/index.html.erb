<h1 class="title">
  <span class="title_left"><%=@page_title%></span>
</h1>

<div class="box">
  <%= search_form_for @q, url: "", class: "form-inline", role: "form" do |f| %>
    <%= f.text_field :f_dest_addr_cont, :placeholder => "手机号" %>
    <%= f.text_field :f_report_code_cont, :placeholder => "状态报告" %>
    <label>发送时间：</label>
    <%= text_field_tag :created_at_gteq, params[:created_at_gteq], class: "datetimepicker", :placeholder => "发送时间大于", "data-date-format" => "yyyy-mm-dd" %>
    ~
    <%= text_field_tag :created_at_lteq, params[:created_at_lteq], class: "datetimepicker", :placeholder => "发送时间小于", "data-date-format" => "yyyy-mm-dd" %>
    <%= f.submit "搜索", :class => "btn btn-primary",:style => "width:5%;" %>
  <% end %>
</div>

<table class="grid">
  <thead>
    <tr>
      <th style="width:5%;">id</th>
      <th style="width:5%;">平台名称</th>
      <th style="width:10%;">流水号</th>
      <th style="width:10%;">源地址</th>
      <th style="width:10%;">目的地址</th>
      <th style="width:10%;">响应时间</th>

      <th style="width:10%;">状态报告</th>
      <th style="width:15%;">LinkID</th>
      <th style="width:5%;">鸿联平台控制</th>
      <th style="width:10%;">发送时间</th>
    </tr>
  </thead>
  <tbody>
    <% @paginated_sms_reports.each do |f| %>
      <tr >
        <td><%= f.id %></td>
        <td><%= f.plat_form %></td>
        <td><%= f.f_unikey  %></td>
        <td><%= f.f_org_addr %></td>
        <td><%= f.f_dest_addr %></td>
        <td><%= f.f_submit_time %></td>

        <td><%= f.f_report_code %></td>
        <td><%= f.f_link_i_d %></td>
        <td><%= f.f_ack_status %></td>
        <td><%= f.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @paginated_sms_reports %>
