<script type="text/javascript">
<% if @topic.temp_image.errors[:image].present? %>
  window.parent.$("#FloatWindow").find("#FloatWindow .textbody").html("<center><%= @topic.temp_image.errors[:image].first %></center>");
<% else %>
  window.parent.setFloatWindowAttrs("600px", "<%= crop_pic_admin_topic_path(@topic) %>");
  window.parent.showCropModal();
  window.parent.$("#FloatWindow").find(".textbody").html("<img src='<%=@topic.temp_image.image.url(:normal)%>' id='cropbox'></img>");
  window.parent.JcropInit(0.8, 1.25);
<% end %>
</script>