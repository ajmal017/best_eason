<h1 class="title">
  <span class="title_left"><%=@page_title%></span>
</h1>

<div class="box">
  <%= search_form_for @q, url: "", class: "form-inline", role: "form" do |f| %>
    <%= f.text_field :phone_cont, :placeholder => "手机号" %>
    <label>回复时间：</label>
    <%= text_field_tag :created_at_gteq, params[:created_at_gteq], class: "datetimepicker", :placeholder => "回复时间大于", "data-date-format" => "yyyy-mm-dd" %>
    ~
    <%= text_field_tag :created_at_lteq, params[:created_at_lteq], class: "datetimepicker", :placeholder => "回复时间小于", "data-date-format" => "yyyy-mm-dd" %>
    <%= f.submit "搜索", :class => "btn btn-primary",:style => "width:5%;" %>
  <% end %>
</div>

<table class="grid">
  <thead>
    <tr>
      <th style="width:5%;">id</th>
      <th style="width:20%;">手机号</th>
      <th style="width:45%;">用户消息内容</th>
      <th style="width:20%;">目的地址</th>
      <th style="width:10%;">回复时间</th>
    </tr>
  </thead>
  <tbody>
    <% @paginated_sms_contents.each do |f| %>
      <tr >
        <td><%= f.id %></td>
        <td><%= f.phone %></td>
        <td><%= f.msg_content  %></td>
        <td><%= f.sp_number %></td>
        <td><%= f.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @paginated_sms_contents %>
