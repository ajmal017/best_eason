<!--页面标题-->
<h1 class="title">
 <span class="title_left"><%=@page_title%></span>
</h1>

<%= form_tag  do %>
  <table class="grid_form">
    <tbody>
      <tr>
        <td class="field"><b>*</b>收件人:</td>
        <td>
          <%= text_field_tag :email %><br/>
          用逗号相隔，比如: wangchangming@caishuo.com,test@caishuo.com
        </td>
      </tr>
      <tr>
        <td class="field"><b>*</b>URL:</td>
        <td>
          <%= text_field_tag :url %><br/>
          必须http格式  http://
        </td>
      </tr>
      <tr>
        <td class="field"><b>*</b>内容:</td>
        <td>
          <%= text_field_tag :body %><br/>
          如果设置URL，则无效
        </td>
      </tr>
      <tr>
        <td class="field"></td>
        <td>
          <%= submit_tag "点击测试" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end -%>



