<%= form_for [:admin, @broker]  do |f|%>
  <table class="grid_form">
    <tbody>
      <tr>
        <td class="field"><b>*</b>名称:</td>
        <td>
          <%= f.text_field :name, :size=>30 %>
        </td>
      </tr>
      <tr>
        <td class="field"><b>*</b>中文名称:</td>
        <td>
          <%= f.text_field :cname, :size=>30 %>
        </td>
      </tr>
      <tr>
        <td class="field"><b>*</b>MasterAccount:</td>
        <td>
          <%= f.text_field :master_account, :size=>30 %>
        </td>
      </tr>
      <tr>
        <td class="field"></td>
        <td>
          <%= f.submit %>
        </td>
      </tr>
     </tbody>
  </table>
<% end -%>