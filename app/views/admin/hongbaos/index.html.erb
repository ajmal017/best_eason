<h1 class="title">
  <span class="title_left"><%=@page_title%></span>
</h1>

<table class="grid">
  <thead>
    <tr>
      <th>用户ID</th>
      <th>Email</th>
      <th>手机号</th>
      <th>交易开始时间</th>
      <th>红包结束时间</th>
    </tr>
  </thead>
  <tbody>
    <% @trading_accounts.each_with_index do |trading_account, index| %>
      <tr>
        <td><%= trading_account.user_id %></td>
        <td><%= trading_account.user.email %></td>
        <td><%= trading_account.user.mobile %></td>
        <td><%= trading_account.trading_since %></td>
        <td><%= trading_account.trading_since+30 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
