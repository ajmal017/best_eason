<div class="box">
  <%= search_form_for search, url: admin_articles_path, class: "form-inline", role: "form" do |f| %>
    <%= f.text_field :title_cont, :placeholder => "标题", class: "form-control" %>
    <%= f.select :synchronized_eq, Article::SYNCHRONIZED.map{|key, value| [key, value]}, {prompt: "已同步？"}, {class: "form-control"} %>
    <%= f.select :viewable_eq, Article::VISIBILITIES.map{|key, value| [key, value]}, {prompt: "可见?"}, {class: "form-control"} %>
    <%= f.select :categories_code_eq, Category::ARTICLES.map{|key, value| [value, key]}, {prompt: "类别"}, {class: "form-control"} %>
    <%= f.submit "搜索", :class => "btn btn-primary",:style => "width:5%;" %>
  <% end %>
</div>