<%= form_for [:admin, @basket_adjustment] do |f| -%>
  <table class="grid_form">
    <tbody>
      <tr>
        <td class="field"><b></b><%= f.label :prev_basket_id %></td>
        <td><%= f.number_field :prev_basket_id, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"><b>*</b><%= f.label :next_basket_id %></td>
        <td><%= f.number_field :next_basket_id, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"><b>*</b><%= f.label :original_basket_id %></td>
        <td><%= f.number_field :original_basket_id, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"><b></b><%= f.label :reason %></td>
        <td><%= f.text_area :reason, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"><b></b><%= f.label :date %></td>
        <td><%= f.date_select :date, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"><b></b><%= f.label :state %></td>
        <td><%= f.number_field :state, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"></td>
        <td><%= f.submit '提交' %></td>
      </tr>
    </tbody>
  </table>
  
<% end -%>


