<h1 class="title">
 <span class="title_left"><%=@page_title%></span>
</h1>

<div class="box">
  <%= form_tag admin_md_plate_trading_flows_path, method: :get, class: "form-inline", role: "form" do %>
    <%= text_field_tag :name, params[:name], placeholder: '板块名称' %>
    <%= text_field_tag :_type, params[:_type], placeholder: '类型' %>
    <%= submit_tag "搜索", :class => "btn btn-primary",:style => "width:5%;" %>
  <% end %>
</div>

<%= page_info(@flows) %>

<table class="grid">
  <thead>
    <tr>
      <th>ID</th>
      <th>名称</th>
      <th>涨跌幅</th>
      <th>类型</th>
      <th>主力净流入</th>
      <th>主力净流入百分比</th>
      <th>最大净流入股票</th>
      <th>创建时间</th>
      <th>更新时间</th>
    </tr>
  </thead>
  <tbody>
  <% @flows.each do |lh| %>
    <tr>
      <td><%= lh.id %></td>
      <td><%= lh.name %></td>
      <td><%= lh.change_percent %></td>
      <td><%= lh._type %></td>
      <td><%= lh.main_value %></td>
      <td><%= lh.main_percent %></td>
      <td><%= lh.led.try(:id) %></td>
      <td><%= lh.created_at %></td>
      <td><%= lh.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @flows %>  
