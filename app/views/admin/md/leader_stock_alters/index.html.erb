<h1 class="title">
 <span class="title_left"><%=@page_title%></span>
</h1>

<div class="box">
  <%= form_tag admin_md_leader_stock_alters_path, method: :get, class: "form-inline", role: "form" do %>
    <%= text_field_tag :base_stock_id, params[:base_stock_id], placeholder: 'BaseStockId' %>
    <%= submit_tag "搜索", :class => "btn btn-primary",:style => "width:5%;" %>
  <% end %>
</div>

<%= page_info(@alters) %>

<table class="grid">
  <thead>
    <tr>
      <th>ID</th>
      <th>股票ID</th>
      <th>股票Symbol</th>
      <th>中文名称</th>
      <th>股份金额</th>
      <th>股份数额(股)</th>
      <th>均价</th>
      <th>创建时间</th>
      <th>更新时间</th>
    </tr>
  </thead>
  <tbody>
  <% @alters.each do |lh| %>
    <tr>
      <td><%= lh.id %></td>
      <td><%= lh.base_stock_id %></td>
      <td><%= lh.symbol %></td>
      <td><%= lh.cname %></td>
      <td><%= lh.value %></td>
      <td><%= lh.shares %></td>
      <td><%= lh.average_price %></td>
      <td><%= lh.created_at %></td>
      <td><%= lh.updated_at %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @alters %>  
