<script type="text/javascript">
<% if @banner_upload.errors[:image].present? %>
  window.parent.$("#FloatWindow").find("#FloatWindow .textbody").html("<center><%= @banner_upload.errors[:image].first %></center>");
<% else %>
  // window.parent.$("#FloatWindow").modal('show');
  window.parent.showCropModal();
  window.parent.$("#upload_recommend_id").val(<%= @banner_upload.id %>);
  window.parent.$("#FloatWindow").find(".textbody").html("<img src='<%=@banner_upload.image.url(:normal)%>' id='cropbox'></img>");
  window.parent.JcropInit();
<% end %>
</script>
