<script type="text/javascript">
<% if @suggest.temp_image.errors[:image].present? %>
  window.parent.$("#FloatWindow").find("#FloatWindow .textbody").html("<center><%= @suggest.temp_image.errors[:image].first %></center>");
<% else %>
  // window.parent.$("#FloatWindow").modal('show');
  window.parent.showCropModal();
  window.parent.$("#FloatWindow").find(".textbody").html("<img src='<%=@suggest.temp_image.image.url(:normal)%>' id='cropbox'></img>");
  window.parent.suggestJcropInit();
<% end %>
</script>

