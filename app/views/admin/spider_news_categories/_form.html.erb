<%= form_for [:admin, @category] do |f| -%>
  <table class="grid_form">
    <tbody>
      <tr>
        <td class="field"><b></b><%= f.label :name %></td>
        <td><%= f.text_field :name, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"><b></b><%= f.label :lvl %></td>
        <td><%= f.number_field :lvl, size: 30 %></td>
      </tr>
      <tr>
        <td class="field"></td>
        <td><%= f.submit '提交' %></td>
      </tr>
    </tbody>
  </table>
  
<% end -%>


