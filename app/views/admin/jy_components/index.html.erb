<h1 class="title">
  <span class="title_left">聚源概念板块列表页</span>
  <span class="title_right">
    <%#= link_to "新建Jy component", new_admin_jy_component_path %>
  </span>   
</h1>

<%= notice_tag -%>

<div class="box">
  <%= search_form_for @q, url: admin_jy_components_path, class: 'form-inline', role: 'form' do |f| -%>
    <%= f.text_field :l_one_code_eq, :placeholder => '一级板块代码', class: 'form-control' %>
    <%= f.text_field :l_two_code_eq, :placeholder => '二级板块代码', class: 'form-control' %>
    <%= f.text_field :l_one_name_cont, :placeholder => '一级板块名称', class: 'form-control' %>
    <%= f.text_field :l_two_name_cont, :placeholder => '二级板块名称', class: 'form-control' %>
    <%= f.submit '搜索', :class => 'btn btn-primary', :style => 'width:5%;' %>
  <% end -%>
</div>

<div class="page_info">
  总数： <b><%= @jy_components.total_entries %></b>
</div>

<table class="grid">
  <thead>
    <tr>
      <th>Id</th>
      <th>开始日期</th>
      <th>一级名称</th>
      <th>一级代码</th>
      <th>二级名称</th>
      <th>二级代码</th>
      <th>是否可用</th>
      <th>创建日期</th>
      <th>更新日期</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>
  <tbody>
  
  <% @jy_components.each do |jy_component| %>
    <tr>
      <td><%= jy_component.id %></td>
      <td><%= jy_component.begin_date %></td>
      <td><%= jy_component.l_one_name %></td>
      <td><%= jy_component.l_one_code %></td>
      <td><%= jy_component.l_two_name %></td>
      <td><%= jy_component.l_two_code %></td>
      <td><%= jy_component.flag %></td>
      <td><%= jy_component.created_at %></td>
      <td><%= jy_component.updated_at %></td>
      <td class="action"><%= link_to '详情', [:admin, jy_component] %></td>
      <td class="action"><%= link_to '编辑', [:edit, :admin, jy_component] %></td>
    </tr>
  <% end %>
 
  </tbody>
</table>

<%= will_paginate @jy_components %>
