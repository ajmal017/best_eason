<h1 class="title">
  <span class="title_left">大赛详情页面</span>
  <span class="title_right">
    <%= link_to "编辑", [:edit, :admin, @contest], style: "margin-right: 10px;" %>
    <%= link_to "返回列表", admin_contests_path %>
  </span>
</h1>

<table class="grid_form">
  <tbody>
    <tr>
      <td class="field">Id</td>
      <td>
        <%= @contest.id %>
      </td>
    </tr>
    <tr>
      <td class="field">状态</td>
      <td>
        <%= @contest.status_name %>
      </td>
    </tr>
    <tr>
      <td class="field">名称</td>
      <td>
        <%= @contest.name %>
      </td>
    </tr>
    <tr>
      <td class="field">开始时间</td>
      <td>
        <%= @contest.start_at %>
      </td>
    </tr>
    <tr>
      <td class="field">结束时间</td>
      <td>
        <%= @contest.end_at %>
      </td>
    </tr>
    <tr>
      <td class="field">主账号</td>
      <td>
        <%= @contest.broker.try(:name) %>
      </td>
    </tr>
    <tr>
      <td class="field">参赛人数</td>
      <td>
        <%= @contest.players.count %>/<%= @contest.users_count %>
        <%= link_to '参赛选手列表', admin_players_path(q: {contest_id_eq: @contest.id}) %>
      </td>
    </tr>
    <tr>
      <td class="field">总金额</td>
      <td>
        <%= humanlize_number @contest.total_invest %>
      </td>
    </tr>
  </tbody>
</table>
