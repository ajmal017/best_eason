}
.thank {
  margin-top: 35px;
  margin-left: 34px;
}
.thank span {
  height: 17px;
}
.bottom {
  color: #748796;
}
.bottom p {
  margin-left: 34px;
  margin-top: 25px;
} 
.bottom dl {
  float: left;
  margin-left: 34px;
  width: 250px;
}
.bottom dl dt {
  float: left;
  margin-right: 15px;
}
.bottom dl dt img {
  width: 80px;
  height: 80px;
}
.bottom dl dd {
  position: relative;
}
.bottom dl dd img {
  position: absolute;
  top: 5px;
}
.bottom dl dd span {
  margin-left: 10px;
  height: 19px;
  line-height: 19px;
  font-size: 12px;
}
.micro-blog {
  width: 180px;
  height: 38px;
  background: #F0F3F5;
  border-radius: 6px;
  float: right;
  margin-right: 50px;
  text-align: center;
  line-height: 38px;
  margin-top: 14px;
}
.micro-blog a {
  color: #1C8EC4;
  text-decoration: none;
}
